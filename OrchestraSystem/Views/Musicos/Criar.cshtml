@model MusicoModel

@{
    ViewData["Title"] = "Adicionar Músico";
}

<div class="text-center">
    <h2>Cadastrar Usuário</h2>

    <form asp-controller="Usuario" asp-action="Criar" method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Digite seu nome">
            
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input asp-for="@Model.Email" type="text" class="form-control" placeholder="Digite seu email">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        
        <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    </form>
    <br />
</div>

<div>
    <a class="btn btn-secondary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Voltar</a>
</div>